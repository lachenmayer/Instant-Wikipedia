{
  "name": "Instant Wikipedia",
  "manifest_version": 2,
  "version": "0.1.0",
  "description": "Hover over a link on Wikipedia to read its opening paragraph.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.wikipedia.org/*"
      ],
      "css": [
        "instant_wiki.css"
      ],
      "js": [
        "jquery-1.7.1.min.js",
        "instant_wiki.js"
      ]
    }
  ]
}
